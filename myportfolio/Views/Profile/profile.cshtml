
@{
    @using myportfolio.Models;
    @model List<Profile>


    <div class="container mt-4">
        <h2>My Portfolio</h2>
        <a class="btn btn-primary mb-3" href="../Profile/Create">Add Profile</a>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body border border-dark">
                        <img src="@item.ProfileImageUrl" class="card-img-top img-thumbnail " style="height:450px;" alt="Profile Image">
                        <div class="card-body">
                            <h5 class="card-title">@item.FullName</h5>
                            <p class="card-text">@item.JobRole</p>
                            <p class="card-text">@item.Experience</p>
                            <a href="/Profile/Edit/@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-controller="Profile" asp-route-id="@item.Id"  class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                    </div>
                </div>
            }
        </div>
    </div>

}
