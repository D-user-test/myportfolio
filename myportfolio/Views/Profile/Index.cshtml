<section id="contact" class="container py-5">
    <div class="card">
     <div class="card-body shadow-sm bg-light">
    <h2 class="section-title"><i class="fa-solid fa-envelope"></i> Contact</h2>
    <div class="row">
        <div class="col-lg-12">
            <form method="post" asp-action="Contact" asp-controller="Profile" id="contactForm" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label  fw-bold">Name</label>
                    <input id="name" class="form-control border border-dark-subtle bg-white" name="name" placeholder="Enter Name" required/>
                </div>

                <div class="col-md-4">
                    <label class="form-label  fw-bold">Email</label>
                    <input id="email" type="email" class="form-control border border-dark-subtle" name="email" placeholder="Enter Email ID"  required/>
                </div> 

                <div class="col-md-4">
                    <label class="form-label fw-bold">Subject </label>
                    <input id="sub" type="text" class="form-control border border-dark-subtle" name="sub" placeholder="Enter Subject"  required/>
                </div>

                <div class="col-12">
                    <label class="form-label fw-bold">Message</label>
                    <textarea id="msg" rows="5" class="form-control border border-dark-subtle" name="msg" placeholder="Type Message"  required></textarea>
                </div>
                <div class="col-12">
                     <button type="button" id="sendBtn" class="btn btn-primary" onclick="sendDataToContact()">Send</button>
                </div>
            </form>
        </div>
      
    </div>
        </div>
    </div>
</section>
